<div class="container">
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10  p-5 d-lg-flex d-md-flex bg-white text-center mt-5 pt-5 main-container log-in-container">
            <div class="d-sm-none d-lg-flex d-md-flex w-100 sing-up-comments d-xs-none d-lg-flex d-md-flex"><h2 class="text-center my-auto sign-up-heading">Join millions worldwide who engage with their clients using Produce Delivery App.</h2></div>
            <div class="w-100">
                <img src="https://img.icons8.com/fluent/96/000000/login-rounded-right.png" />
                @*<h3 class=" text-center text-primary"> <span><i class="fas fa-user-circle"></i></span>&nbsp;&nbsp; </h3>*@
                <h3 class="mb-5 text-center text-primary"><span style="font-weight:700;">Login</span></h3>
                <EditForm Model="@loginCmd" OnValidSubmit="@LogInForm" class="form-group">
                    <DataAnnotationsValidator />
                    <div class="login-field p-2">
                        <MatTextField @bind-Value="@loginCmd.Email" Label="Email" Outlined="true" Class="border-primary w-100"></MatTextField>
                        <div class="text-left"><ValidationMessage For="(()=>loginCmd.Email)" /></div>
                    </div>
                    <div class="login-field p-2">
                        <MatTextField @bind-Value="@loginCmd.Password" Type="password" Label="Password" Outlined="true"></MatTextField>
                        <div class="text-left"> <ValidationMessage For="(()=>loginCmd.Password)" /></div>
                        <div class="text-danger">@error</div>
                    </div>
                    <div class="p-2">
                    <span class="float-left ">
                        <input type="checkbox" id="rememberMe" />
                        <label for="rememberMe">Remember me</label>
                    </span><span class="float-right"><a href="/recover-password" class="log-in-link">Forget password</a></span>
                    </div>
                    <br />
                    <br />
                    <br />
                    <div class="justify-content-center">
                        <button type="submit" disabled="@loading" name="login" class="btn btn-primary btn-block">
                            @if (loading)
                            {
                                <span class="spinner-border spinner-border-sm mr-1"></span>
                            }
                            Login
                        </button>
                        @*<input type="submit" name="login" value="Login" class="button btn-primary" />*@
                    </div>
                    <div class="text-center text-black-50"> Do not have an account? <a class="log-in-link" href="/registeration">Register</a></div>
                </EditForm>
            </div>
        </div>
        <div class="col-1"></div>
    </div>
</div>

<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="5"
                IconType="IconType.FontAwesome"
                SuccessClass="success-toast-override"
                ErrorIcon="fa fa-bug" />
